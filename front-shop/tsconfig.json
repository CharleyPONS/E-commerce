{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "newLine": "LF",
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "reflect-metadata"],
    "lib": ["es2016", "es7", "dom", "esnext.asynciterable"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/core/json/**/*.json"],
  "files": ["node_modules/typescript/lib/lib.es6.d.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "dist"]
}
